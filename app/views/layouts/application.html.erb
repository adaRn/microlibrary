<!DOCTYPE html>
<html>
  <head>
    <title>μLibrary</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/"><span class="glyphicon glyphicon-book" aria-hidden="true"></span> μLibrary</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li><%= link_to '<span class="glyphicon glyphicon-folder-open" aria-hidden="true"></span> Books</a>'.html_safe, books_path %></li>
        <li><%= link_to '<span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> Rental history</a>'.html_safe, rentals_path %></li>
      </ul>

      <% if current_user %>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to '<span class="glyphicon glyphicon-user" aria-hidden="true"></span> '.html_safe+current_user.name, current_user %></li>
        <li><%= link_to '<span class="glyphicon glyphicon-off" aria-hidden="true"></span> Logout'.html_safe, destroy_user_session_path %></li>
      </ul>
      <% end %>

    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
    </header>

    <div id="flash_messages" class="container">
    <% flash.each do |key, value| %>
    <div class="alert alert-success" role="alert">
      <%= content_tag(:div, value, :class => "flash #{key}") %>
    </div>
    <% end %>
    </div>

    <%= yield %>
  </body>
</html>
