<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-sm-9">
      <h2>Books</h2>
    </div>
    <div class="col-sm-3">
      <p>
        <%= link_to 'Add a new book to the library', new_book_path %>
      </p>
    </div>
  </div>
</div>


<div class="container">
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Cover</th>
      <th>Title</th>
      <th>Author</th>
      <th>ISBN</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book_cover_image book %></td>
        <td><%= link_to book.title, book %></td>
        <td><%= book.author %></td>
        <td><%= book.isbn %></td>
        <td>
          <% if book.rented? %>
            <%= policy(book.rentals.last).finish? ? button_to('Return', rental_finish_path(book.rentals.last)) : "Rented until #{book.rentals.last.due_date}" %></td>
          <% else %>
            <%= policy(book).rent? ? (button_to 'Rent', rental_create_path(book)) : 'Cannot rent' %>
          <% end %>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
