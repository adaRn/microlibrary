<div class="container">
  <div class="row">
    <div class="col-sm-9">
      <h2>Books</h2>
    </div>
    <div class="col-sm-3">
      <p>
        <%= link_to 'Add a new book to the library', new_book_path %>
      </p>
    </div>
  </div>
</div>


<div class="container">
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Cover</th>
      <th>Title</th>
      <th>Author</th>
      <th>ISBN</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book_cover_image book %></td>
        <td><%= link_to book.title, book %></td>
        <td><%= book.author %></td>
        <td><%= book.isbn %></td>
        <td>
          <%= book_action_button(book) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
