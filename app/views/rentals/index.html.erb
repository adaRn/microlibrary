<p id="notice"><%= notice %></p>

<h1>Book rentals</h1>

<table>
  <thead>
    <tr>
      <th>Book</th>
      <th>User</th>
      <th>Start</th>
      <th>Due</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rentals.each do |rental| %>
      <tr>
        <td><%= rental.book.title %></td>
        <td><%= rental.user.name %></td>
        <td><%= rental.start_date %></td>
        <td><%= rental.due_date %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

